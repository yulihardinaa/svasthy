<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FEF7E7"
    >
    <RelativeLayout
        android:id="@+id/actionBar_Diary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/icon_back"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diary"
            android:gravity="center"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_light"

            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunito"
        android:textSize="18dp"
        android:text="Monday, 13 April 2020"
        android:textColor="#F79514"
        android:id="@+id/diary2_date"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/nunito_light"
        android:textSize="12dp"
        android:text="Monday, 13 April 2020"
        android:textColor="#EDB422"
        android:id="@+id/diary2_place"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/diary2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Monday, 13 April 2020"
            android:textColor="#555555"
            android:textSize="20dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_edit"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_12"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="30dp"
        android:id="@+id/diary2_pic"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="#555555"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras pellentesque arcu dolor, nec varius urna placerat at. Vestibulum leo lectus, auctor auctor nunc in, tempor eleifend tellus. Mauris a vehicula turpis. Phasellus non justo sapien. Nullam non libero libero. Morbi cursus ligula ut fringilla lacinia."
        android:layout_marginRight="30dp"
        android:fontFamily="@font/nunito_light"
        android:id="@+id/diary2_text"
        />


</LinearLayout>
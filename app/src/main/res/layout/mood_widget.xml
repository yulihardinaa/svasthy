<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF7E7"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="2dp">

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="How was your day?"
        android:textAlignment="center"
        android:textColor="#2F4F4F"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mood_1"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:src="@drawable/ic_mood_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="teribble"
                android:textAlignment="center"
                android:textColor="#696969"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/mood_2"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:src="@drawable/ic_mood_2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mood_3"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:src="@drawable/ic_mood_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:gravity="center"
                android:text="Ok"
                android:textColor="#696969" />
        </LinearLayout>


        <ImageView
            android:id="@+id/mood_4"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:src="@drawable/ic_mood_4" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mood_5"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:src="@drawable/ic_mood_5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="great"
                android:textColor="#696969" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/nunito_light"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/themeColor" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF7E7"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/actionBar_Diary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/icon_back"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confide Room"
            android:gravity="center"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_light"
            />
        <ImageView
            android:id="@+id/profile_confide"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_profile_foreground"
            android:layout_marginLeft="350dp"
            >
        </ImageView>

    </RelativeLayout>

    <TextView
        android:id="@+id/title_confide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nugas Terus Aku Pusing"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/profile_detail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_profile_foreground"
            
            >
        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kutu Buku"
                android:fontFamily="@font/nunito"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/user_name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 Mei 2020"
                android:textSize="10dp"
                android:fontFamily="@font/nunito_light"
                android:layout_marginLeft="10dp"
                android:id="@+id/confide_time"/>
        </LinearLayout>

    </LinearLayout>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
                 <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/confide_pic"
                    android:src="@drawable/pic_confide"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/text_confide"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras pellentesque arcu dolor, nec varius urna placerat at. Vestibulum leo lectus, auctor auctor nunc in, tempor eleifend tellus. Mauris a vehicula turpis. Phasellus non justo sapien. Nullam non libero libero. Morbi cursus ligula ut fringilla lacinia.aecenas tristique arcu ac odio pulvinar, et viverra nisi gravida. Aliquam quis elit ac est semper laoreet eu eget dolor. Pellentesque dui sapien, luctus id est ac, convallis tincidunt dolor. Nunc in ex vel nisl tempor rutrum. Praesent convallis odio et sapien condimentum ultricies. Proin arcu augue, placerat sed semper eget, bibendum ac lacus. Interdum et malesuada fames ac ante ipsum primis in faucibus. Morbi sit amet sem eget odio elementum elementum porta et ex. Praesent blandit tristique ligula, a porttitor ex fringilla vel."

                    />

                <ImageView
                    android:id="@+id/like_confide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_love"
                    android:layout_marginLeft="200dp"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/count_like"
                    android:text="120"
                    android:layout_marginLeft="200dp"
                    android:fontFamily="@font/nunito"
                    android:textColor="#C1BDB6"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:textSize="14dp"
                    android:layout_marginLeft="30dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/profile_comment"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/ic_profile_foreground"

                        >
                    </ImageView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Piti Pata"
                            android:fontFamily="@font/nunito"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:id="@+id/username_comment"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras pellentesque arcu dolor, nec varius urna placerat at. Vestibulum leo lectus, auctor auctor nunc in, "
                            android:textSize="10dp"
                            android:fontFamily="@font/nunito_light"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="40dp"
                            android:layout_marginRight="30dp"
                            android:id="@+id/confide_comment"/>
                    </LinearLayout>



            </LinearLayout>


        </ScrollView>

</LinearLayout>
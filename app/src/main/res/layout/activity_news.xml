<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="?attr/actionBarSize"
    android:background="#FBCC80">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/header_news_card"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/header_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest News"
                android:textColor="@color/whiteTextColor"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="103dp"
                android:layout_marginLeft="@dimen/leftMarginText"
                android:textSize="28dp"
                android:fontFamily="@font/nunito_semibold"
                android:paddingBottom="20dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="377dp"
                android:layout_height="146dp"
                android:layout_gravity="center"
                android:padding="20dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#FEF7E7">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="0dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="0dp"
                        android:layout_margin="0dp">
                        <ImageView
                            android:layout_width="101dp"
                            android:layout_height="97dp"
                            android:src="@drawable/ic_example_news"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Source"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="0dp"
                            android:textSize="11dp"
                            android:fontFamily="@font/nunito_extralight"
                            />

                    </LinearLayout>


                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/news_title"
                            android:text="@string/app_name"
                            android:textSize="20dp"
                            android:fontFamily="@font/nunito_semibold"
                            android:padding="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/news_desc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/nunito_light"
                            android:text="Lorem Ipsum dolor sit amet bla bla bla blablablalbala"
                            android:textSize="12dp" />
                    </LinearLayout>



                </LinearLayout>




                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>